<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container1">
      <h1>
        <center>Eat-Da-Burger</center>
      </h1>
      <h2>Enter a burger you want to eat by clicking the "Submit" button</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger:</label>
          <input type="text" id="burger-input" name="name">
        </div>

        <button type="submit" id="burger-button">Submit</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="card-header">
        <h2 class="card-title" >Good Burgers</h2>
      </div>
      <div class="card-body">

          {{#each burgers}}
          {{#unless devoured}}
          <span>
            <h2><strong>{{this.burger_name}}</strong></h2>
          </span>
          <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}" a-newDevoured={{devour}}><span
              class="fa fa-usd"></span></button>
          {{/unless}}
          {{/each}}

      </div>
    </div>
    <br>
    <div class="col-sm-6">
      <div class="card-header">
        <h2 class="card-title" style="text-align:top">Devoured Good Burgers</h2>
      </div>
      <div class="card-body2" id="rightside">


          {{#each burgers}}
          {{#if devoured}}
          <h2><strong>{{this.burger_name}} </strong></h2>
          <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}" a-newDevoured={{devour}}><span
              class="trash"></span></button>
          {{/if}}
          {{/each}}


      </div>
    </div>
  </div>
</div>
